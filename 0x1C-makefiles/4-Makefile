CC=gcc
SRC=main.c holberton.c
OBJ=$(SRC:%.c=%.o)
NAME=school
RM=rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

%.o : %.c m.h
	$(CC) $(CFLAGS) -c -o $@ $<

all : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY : clean oclean fclean re
clean :
	$(RM) $(wildcard *~) $(NAME)

oclean :
	$(RM) $(wildcard *.o)

fclean :
	$(RM) $(wildcard *~) $(wildcard *.o) $(NAME)	

re : oclean all
